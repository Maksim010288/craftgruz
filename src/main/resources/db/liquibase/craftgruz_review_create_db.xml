<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="01" author="Maksym Baziuk">
        <createTable tableName="craftload_reviews">
            <column name="id" type="integer" autoIncrement="true">
                <constraints nullable="true"/>
            </column>
            <column name="enterprise" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="location_from" type="varchar(30)">
                <constraints nullable="true"/>
            </column>
            <column name="location_to" type="varchar(30)">
                <constraints nullable="true"/>
            </column>
            <column name="reviews_text" type="varchar(150)">
                <constraints nullable="true"/>
            </column>
            <column name="date" type="varchar(40)">
                <constraints nullable="true"/>
            </column>
            <column name="time" type="varchar(10)">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>